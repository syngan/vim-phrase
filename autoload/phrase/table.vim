let s:default_comment = ['#']

function! s:table.init() "{{{1
  let self._table = {}
  for entry in s:ft_data
    " separate with *two* or more space
    let [ filetype, ext; comment ] =  split(entry,'  \+')
    let self._table[filetype] = { 'ext': ext, 'cmt': comment }
  endfor
  " call extend(self._table, g:phrase_ft_tbl, 'force')
endfunction

function! s:table.get(filetype) "{{{1
  return get(self._table, a:filetype,
        \ {"ext": a:filetype , "cmt": s:default_comment })
endfunction

function! s:table.comment_for(filetype) "{{{1
  return self.get(a:filetype).cmt
endfunction

function! s:table.ext_for(filetype) "{{{1
  return self.get(a:filetype).ext
endfunction

function! phrase#table#get() "{{{1
  return s:table
endfunction

